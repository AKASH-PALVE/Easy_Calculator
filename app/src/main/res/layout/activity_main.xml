<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<!--    All Screen layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

<!--        Output Block-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--    expression  text view -->
            <ScrollView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/solution_textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/result_textView"
                    android:backgroundTint="#0F30E4"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="50dp"
                    android:textStyle="bold">
                </TextView>
            </ScrollView>

            <!--    final answer text view : result_tv -->
            <ScrollView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/result_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/buttons_layout"
                    android:textAlignment="textEnd"
                    android:backgroundTint="#DD1C1C"
                    android:text=""
                    android:textSize="30dp"
                    android:textStyle="bold">

                </TextView>
            </ScrollView>

        </LinearLayout>

<!--        Input Block-->
        <LinearLayout

            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/buttons_layout"
                android:layout_alignParentBottom="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="C"
                        android:textSize="34dp"
                        android:backgroundTint="#FFA559"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_c"
                        android:layout_margin="@dimen/button_margin"
                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="("
                        android:textSize="30dp"
                        android:backgroundTint="#AAAAAA"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_open_bracket"
                        android:layout_margin="@dimen/button_margin"
                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text=")"
                        android:textSize="30dp"
                        android:backgroundTint="#AAAAAA"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_close_bracket"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="/"
                        android:textSize="34dp"
                        android:backgroundTint="#FC9501"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_divide"
                        android:layout_margin="@dimen/button_margin"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="7"
                        android:textSize="34dp"
                        android:backgroundTint="#232428"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_7"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="8"
                        android:textSize="34dp"
                        android:backgroundTint="#232428"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_8"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="9"
                        android:textSize="34dp"
                        android:backgroundTint="#232428"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_9"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="+"
                        android:textSize="34dp"
                        app:backgroundTint="#FC9501"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_plus"
                        android:layout_margin="@dimen/button_margin"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="4"
                        android:textSize="34dp"
                        android:backgroundTint="#232428"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_4"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="5"
                        android:textSize="34dp"
                        android:backgroundTint="#232428"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_5"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="6"
                        android:textSize="34dp"
                        android:backgroundTint="#232428"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_6"
                        android:layout_margin="@dimen/button_margin"

                        />

                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:id="@+id/button_minus"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:layout_width="75dp"
                        android:layout_height="75dp"

                        android:backgroundTint="#FC9501"
                        android:text="-"
                        android:textColor="#FFFFFF"
                        android:textSize="34dp"
                        app:cornerRadius="35dp"
                        android:layout_margin="@dimen/button_margin"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="1"
                        android:textSize="34dp"
                        android:backgroundTint="#232428"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_1"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="2"
                        android:textSize="34dp"
                        android:backgroundTint="#232428"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_2"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="3"
                        android:textSize="34dp"
                        android:backgroundTint="#232428"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_3"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="*"
                        android:textSize="34dp"
                        android:backgroundTint="#FC9501"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_multiply"
                        android:layout_margin="@dimen/button_margin"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="AC"
                        android:textSize="28dp"
                        android:backgroundTint="#FFA559"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_all_clear"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="0"
                        android:textSize="34dp"
                        android:backgroundTint="#232428"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_0"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="."
                        android:textSize="34dp"
                        android:backgroundTint="#232428"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_dot"
                        android:layout_margin="@dimen/button_margin"

                        />
                    <com.google.android.material.button.MaterialButton

                        android:layout_weight="1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cornerRadius="35dp"
                        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                        android:text="="
                        android:textSize="34dp"
                        android:backgroundTint="#FC9501"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button_equal"
                        android:layout_margin="@dimen/button_margin"
                        />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>



